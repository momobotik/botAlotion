<body>
    <h1>Добро пожаловать в VoltonPay!</h1>
    <p>Здесь вы можете управлять своим балансом и настройками</p>
    
    <button class="btn" onclick="Telegram.WebApp.close()">Закрыть Mini App</button>
    
    <script>
        // Инициализация Mini App
        Telegram.WebApp.ready();
        
        // Получаем данные пользователя из Telegram
        const user = Telegram.WebApp.initDataUnsafe.user;
        if (user) {
            document.body.innerHTML += `
                <p>Привет, ${user.first_name}!</p>
                <p>Ваш ID: ${user.id}</p>
            `;
        }
    </script>
